<Window x:Class="Panels.DockPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DockPanel" Height="300" Width="300">
    <DockPanel LastChildFill="false">
        <!--LastChildFill="true4": Does the last element fill the remaining space?-->
        <Button DockPanel.Dock="Top" Background="Red">Top 1</Button>
        <Button DockPanel.Dock="Top" Background="Lime">Top 2</Button>
        <Button DockPanel.Dock="Left" Background="Orange">Left</Button>
        <Button DockPanel.Dock="Right" Background="Green">Right</Button>
        <Button DockPanel.Dock="Bottom" Background="Purple">Bottom</Button>
        <Button Background="Yellow">Sans Dock</Button>
    </DockPanel>
</Window>
