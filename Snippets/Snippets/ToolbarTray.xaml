<Window x:Class="Snippets.ToolbarTray"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ToolbarTray" Height="300" Width="300">
    <StackPanel>
        <ToolBarTray Background="White">
            <ToolBar Band="1" BandIndex="1">
                <Button>
                    <Image Source="Images/btnAjouter.png"/>
                </Button>
                <Button>
                    <Image Source="Images/btnSav.png"/>
                </Button>
            </ToolBar>
            <ToolBar Band="2" BandIndex="2">
                <ToggleButton>
                    <Image Source="Images/FormatGras.png"/>
                </ToggleButton>
                <CheckBox>
                    <TextBlock TextDecorations="Underline" Text="Souligné"/>
                </CheckBox>
                <CheckBox FontStyle="Italic" Content="Italique" />
                <Separator/>
                <ComboBox SelectedIndex="1">
                    <ComboBoxItem>50%</ComboBoxItem>
                    <ComboBoxItem>100%</ComboBoxItem>
                    <ComboBoxItem>200%</ComboBoxItem>
                </ComboBox>
            </ToolBar>
        </ToolBarTray>
    </StackPanel>
</Window>
