<Window x:Class="Snippets.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <!-- Controle ListBox - Valeurs simples -->

        <StackPanel>
            <ListBox Margin="5" Name="Liste" SelectionChanged="Liste_SelectionChanged" SelectionMode="Extended">
                <ListBoxItem>Valeur 1</ListBoxItem>
                <ListBoxItem>Valeur 2</ListBoxItem>
                <ListBoxItem>Valeur 3</ListBoxItem>
            </ListBox>
            <Button Name="btnSelection" Click="BtnSelection_OnClick">Sélection multiple</Button>
            <TextBlock Name="lblMsg"></TextBlock>

            <ListBox Margin="5" Name="ListeCheckbox" SelectionChanged="ListeCheckbox_OnSelectionChanged" SelectionMode="Extended">
                <CheckBox>Valeur 1</CheckBox>
                <CheckBox>Valeur 2</CheckBox>
                <CheckBox>Valeur 3</CheckBox>
            </ListBox>
            <Button Name="btnSelectionCheckbox" Click="BtnSelectionCheckbox_OnClick">Sélection multiple</Button>
            <TextBlock Name="lblMsgCheckbox"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
