<Window x:Class="Documents.DocDynamique" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Document dynamique" Height="300" Width="300">
    <FlowDocumentScrollViewer x:Name="docViewer" Margin="5">
        <FlowDocument x:Name="doc">
            <BlockUIContainer>
                <Button x:Name="btnCreerDoc" Click="btnCreerDoc_Click" Margin="5" Padding="5">Créer le document</Button>
            </BlockUIContainer>
        </FlowDocument>
    </FlowDocumentScrollViewer>
</Window>
